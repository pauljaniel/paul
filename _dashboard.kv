#:import Snackbar kivymd.uix.snackbar.Snackbar
#:import Window kivy.core.window.Window

<MDCard>
    id: mdCard
    style: "elevated"

<CustomSnackbar>
    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon
        opposite_colors: True
    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 'ffffff'
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}
        
<MainLayout>:   
